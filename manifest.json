{
	"manifest_version": 2,

	"name": "Scroll",
	"description": "Automatically scrolls pages",
	"version": "1.0",
	"permissions": ["activeTab"],

	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Scroll",
		"default_popup": "popup.html"
	},

	"content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["extensions/angular.js", "scroller.js"]
    }
  ]
}