{
	"manifest_version": 2,

	"name": "Scroll",
	"description": "Automatically scrolls pages",
	"version": "1.0",
	"permissions": ["activeTab"],

	"browser_action": {
		"default_icon": "assets/icon.png",
		"default_title": "Scroll",
		"default_popup": "popup.html"
	},

	"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extensions/angular.js", "js/scroller.js"]
    }
  ]
}